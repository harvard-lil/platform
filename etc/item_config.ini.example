; Connecting to Solr
solr_host = localhost
solr_port = 8080
solr_path = /solr/item

; Valid fields
; This should be the list of all valid fields in the Solr instance
; (We do this so that we can print error messages)
valid_params[] = id
valid_params[] = title
valid_params[] = title_sort
valid_params[] = title_link_friendly
valid_params[] = sub_title
valid_params[] = creator
valid_params[] = publisher
valid_params[] = pub_location
valid_params[] = pub_date
valid_params[] = pub_date_numeric
valid_params[] = format
valid_params[] = language
valid_params[] = pages
valid_params[] = pages_numeric
valid_params[] = height
valid_params[] = height_numeric
valid_params[] = call_num
valid_params[] = lcsh
valid_params[] = id_inst
valid_params[] = id_isbn
valid_params[] = id_lccn
valid_params[] = id_oclc
valid_params[] = online_avail
valid_params[] = ut_id
valid_params[] = ut_count
valid_params[] = loc_call_num_subject
valid_params[] = data_source
valid_params[] = dataset_tag
valid_params[] = shelfrank
valid_params[] = score_checkouts_undergrad
valid_params[] = score_checkouts_grad
valid_params[] = score_checkouts_fac
valid_params[] = score_reserves
valid_params[] = score_recalls
valid_params[] = score_course_texts
valid_params[] = score_holding_libs
valid_params[] = score_extra_copies
valid_params[] = total_score
valid_params[] = note
valid_params[] = holding_libs
valid_params[] = loc_call_num_sort_order
valid_params[] = url


;Multi-valued fields
mulval_fields[] = creator
mulval_fields[] = call_num
mulval_fields[] = lcsh
mulval_fields[] = id_isbn
mulval_fields[] = note
mulval_fields[] = holding_libs
