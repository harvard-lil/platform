; Numeric fields:
; (These are things we can do Solr stats on)
numeric_fields[] = pub_date_numeric
numeric_fields[] = pages_numeric
numeric_fields[] = height_numeric
numeric_fields[] = ut_count
numeric_fields[] = shelfrank
numeric_fields[] = score_checkouts_undergrad
